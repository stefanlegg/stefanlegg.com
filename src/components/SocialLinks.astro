---
import presentation from "@/data/presentation";
---

<div class="connect-list">
  {presentation.socials.map((social) => (
    <a href={social.link} target="_blank" rel="noopener" class="connect-link">
      {social.label} / @stefanlegg
    </a>
  ))}
</div>

<style>
  .connect-list { display: flex; flex-direction: column; gap: 14px; }
  .connect-link {
    font-family: var(--font-mono); font-size: 18px; font-weight: 400;
    color: var(--text-body); text-decoration: none; transition: color 0.3s;
  }
  .connect-link:hover { color: var(--accent-bright); text-shadow: 0 0 8px var(--accent-glow); }
</style>
