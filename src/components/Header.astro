---
import removeTrailingSlash from "@/utils/removeTrailingSlash";

const pathname = removeTrailingSlash(Astro.url.pathname);
---

<nav class="nav">
  <div class="nav-links">
    <a href="/" class:list={["nav-link", { active: pathname === "/" }]}>Home</a>
    <a href="/posts" class:list={["nav-link", { active: pathname.startsWith("/posts") }]}>Posts</a>
    <a href="/bookmarks" class:list={["nav-link", { active: pathname.startsWith("/bookmarks") }]}>Bookmarks</a>
  </div>
</nav>

<style>
  .nav {
    display: flex; justify-content: center; align-items: center;
    padding: 64px 0 20px;
    opacity: 0; animation: fade-up 0.8s ease 0.3s forwards;
  }
  .nav-links { display: flex; gap: 24px; }
  .nav-link {
    font-family: var(--font-mono); font-size: 14px; font-weight: 400;
    letter-spacing: 2px; text-transform: uppercase;
    color: var(--text-label); text-decoration: none; transition: color 0.3s;
  }
  .nav-link:hover { color: var(--text); }
  .nav-link.active { color: var(--text); }

  @media (max-width: 600px) {
    .nav { padding-top: 48px; }
    .nav-links { gap: 14px; }
  }
</style>
